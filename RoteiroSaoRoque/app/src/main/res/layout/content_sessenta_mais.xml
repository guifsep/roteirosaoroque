<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perguntas"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.windows.roteirosaoroque.SessentaMais"
    tools:showIn="@layout/app_bar_sessenta_mais">

    <TextView
        android:id="@+id/txtSessentaMais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seu passeio terá crianças?"
        android:textSize="20dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.016" />

    <Button
        android:id="@+id/btnSim60mais"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:text="Sim"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.402" />

    <Button
        android:id="@+id/btnNao60mais"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Não"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607" />

    <Button
        android:id="@+id/btnVoltar60mais"
        android:layout_width="128dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Voltar"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.957"
        tools:layout_editor_absoluteX="108dp" />

</android.support.constraint.ConstraintLayout>
